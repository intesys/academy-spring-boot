{{>header}}
<div class="row mt-5">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                New Examination
            </div>
            <div class="card-body">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{patient.firstName}} {{patient.LastName}}</h5>
                        <p class="card-text">{{patient.birthDate}}</p>
                        <p class="card-text">{{patient.fiscalCode}}</p>
                    </div>
                </div>

                <hr/>

                <form method="post" action="/examination/new">
                    <input type="hidden" name="patientId" value="{{patient.id}}"/>
                    <div class="form-group row">
                        <label for="height" class="col-sm-5 col-form-label">Height (cm)</label>
                        <div class="col-sm-7">
                            <input type="number" class="form-control" id="height" name="height" min="0" max="300"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="weight" class="col-sm-5 col-form-label">Weight (KG)</label>
                        <div class="col-sm-7">
                            <input type="number" class="form-control" id="weight" name="weight" min="0"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="diastolicPressure" class="col-sm-5 col-form-label">Diastolic Pressure (mmHg)</label>
                        <div class="col-sm-7">
                            <input type="number" class="form-control" id="diastolicPressure" name="diastolicPressure" min="0"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="systolicPressure" class="col-sm-5 col-form-label">Systolic Pressure (mmHg)</label>
                        <div class="col-sm-7">
                            <input type="number" class="form-control" id="systolicPressure" name="systolicPressure" min="0"/>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

{{>footer}}
